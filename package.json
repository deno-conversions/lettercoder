{
  "name": "lettercoder",
  "version": "0.0.4",
  "description": "Quoted-printable (RFC 2045) and mime word (RFC 2047) decoding",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "keywords": [
    "email",
    "e-mail",
    "mail",
    "mime",
    "quoted-printable",
    "mime-message",
    "decoder",
    "typescript",
    "isomorphic"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mat-sz/lettercoder.git"
  },
  "bugs": {
    "url": "https://github.com/mat-sz/lettercoder/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "__tests__/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "homepage": "https://github.com/mat-sz/lettercoder",
  "author": "Mat Sz <contact@matsz.dev>",
  "license": "BSD-3-Clause-Clear",
  "devDependencies": {
    "@types/base64-js": "^1.2.5",
    "@types/jest": "^25.1.5",
    "@types/node": "^13.1.4",
    "husky": "^4.2.3",
    "jest": "^25.2.7",
    "lint-staged": "^10.0.9",
    "prettier": "^2.0.2",
    "ts-jest": "^25.3.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.4"
  },
  "dependencies": {
    "base64-js": "^1.3.1"
  }
}
